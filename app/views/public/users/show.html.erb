<%= @user.name %><%= link_to "＋", new_public_blog_path %>
<%= attachment_image_tag @user, :profile_img, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200" %>
<% if @user.id == current_user.id %>
  <%= link_to "プロフィール編集", edit_public_user_path %>
<% else %>
  <div>フォローする</div>
<% end %>
<div>フォロー中</div><div>フォロワー</div>
<%= @user.self_introduction %>
<% @blogs.each do |blog| %>
 <div>
   <%= link_to blog_path(blog.id) do %>
     <%= attachment_image_tag blog, :blog_img, :fill, 300, 250, fallback: "no_image.jpg", size: "200x150" %>
   <% end %>
   <div><%= blog.camera.camera_name %></div><div><%= blog.lens.lens_name %></div>
 </div>
<% end %>